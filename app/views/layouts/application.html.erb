<!DOCTYPE html>
<html>
<head>
  <title>Boss</title>
  <%= stylesheet_link_tag    "boss/application", :media => "all" %>
  <%= javascript_include_tag "boss/application" %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
<% end %>

<%= yield %>

</body>
</html>
